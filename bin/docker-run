#!/usr/bin/env bash
set -eux

PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"
cd $PROJECT_DIR

./bin/docker-build

docker run \
 --add-host=host.docker.internal:host-gateway \
 --interactive \
 --publish 3200:80 \
 --tty \
 --volume ${PROJECT_DIR}/..:/leihs \
 leihs-reverse-proxy \
 /bin/bash -c "source /etc/apache2/envvars && /usr/sbin/apache2 -DFOREGROUND"
